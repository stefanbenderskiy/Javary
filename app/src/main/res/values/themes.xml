<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Javary" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/blue</item>


        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/light_grey</item>
        <item name="colorOnSecondaryFixed">@color/light_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background brand color. -->
        <item name="backgroundColor">@color/light_grey</item>

        <item name="colorOnBackground">@color/grey</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
