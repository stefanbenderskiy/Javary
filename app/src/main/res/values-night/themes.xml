<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Javary" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_grey</item>
        <item name="colorSecondaryVariant">@color/dark_grey</item>

        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSecondaryFixed">@color/grey</item>
        <item name="backgroundColor">@color/shadow_grey</item>
        <item name="colorOnBackground">@color/grey</item>
        <item name="statusBarBackground">?attr/colorSecondary</item>
        <item name="statusBarForeground">@color/white</item>
    </style>
</resources>