<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Javary"
        tools:targetApi="31">
        <activity
            android:name=".activities.lesson.LessonActivity"
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               android:exported="false" />
        <activity
            android:name=".activities.registration.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".activities.notifications.NotificationsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.info.InfoActivity"
            android:exported="false" />
        <activity
            android:name=".activities.settings.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>